<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <!-- <item name="android:windowNoTitle">true</item> -->
        <!-- <item name="android:windowAnimationStyle">@style/AnimationActivity</item> -->
    </style>
    <style name="NoTitleActivity" parent="AppBaseTheme">
        <item name="android:windowNoTitle">true</item>
    </style>
    
    <style name="AnimationActivity" parent="@android:style/Animation.Activity" mce_bogus="1">  
     <item name="android:activityOpenEnterAnimation">@anim/popup_display</item>  
     <item name="android:activityOpenExitAnimation">@anim/popup_dismiss</item>  
     <item name="android:activityCloseEnterAnimation">@anim/popup_display</item>  
     <item name="android:activityCloseExitAnimation">@anim/popup_dismiss</item>  
      </style> 
    
    <style name="PopupAnimation" parent="android:Animation"
		mce_bogus="1">
		<item name="android:windowEnterAnimation">@anim/popup_display</item>
		<item name="android:windowExitAnimation">@anim/popup_dismiss</item>
	</style>
	
    <style name="CustomCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
	<item name="android:button">@drawable/checkbox_style</item>
	
</style>
    
</resources>