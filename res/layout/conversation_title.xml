<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/conversation_layout"
    android:background="@drawable/actionbar_bg_top" >
    <ImageView 
        android:id="@+id/contact_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"/>
    <ImageButton 
        android:id="@+id/callbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/call_btn_selector"
        android:layout_centerVertical="true"
        android:layout_marginRight="7dp"
       />
    
    <ImageButton 
        android:id="@+id/add_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/callbtn"
        android:layout_marginRight="4dp"
        android:layout_centerVertical="true"
        android:visibility="gone"/>
   <!--  <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/callbtn"
        android:layout_centerVertical="true"
        > -->
        <TextView
	        android:id="@+id/contact_name"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:textColor="@color/text_color_deep"
	        android:layout_alignParentLeft="true"
	        android:gravity="center_vertical"
	        android:layout_centerVertical="true" 
	        android:layout_toLeftOf="@id/add_contact"
	        android:layout_marginRight="15dp"/>

